<html>

<head>
  <meta charset="utf-8">
  <title>Las Acacias</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Prueba información link-->
  <meta property="og:url" content="https://mispeliculas.herokuapp.com">
  <meta property="og:site_name" content="Comunal las Acacias">
  <meta property="og:title" content="Comunal las Acacias">
  <meta name="description" content="Comunal las Acacias" <meta="" property="og:description">
  <meta property="og:image" content="https://mispeliculas.herokuapp.com/img/logo2.png">
  <script src="js/jquery.js"></script>
  <script src="js/bootstrap.js"></script>
  <link rel="stylesheet" href="css/bootstrap.css">
  <link rel="stylesheet" href="css/acacias.css">
</head>

<body>
  <div class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-ex-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        <a class="navbar-brand" href="/"><span>Las Acacias</span></a>
      </div>
      <div class="collapse navbar-collapse" id="navbar-ex-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li class="hidden-sm hidden-xs">
            <a href="/"><img src="home.png" alt="Inicio" width="25" height="25"></a>
          </li>
          <li>
            <a href="/">Inicio</a>
          </li>{{#if usuario}}
          <li>
            <a href="/salir">Salir</a>
          </li>
          {{else}}
          <li>
            <a href="/login">Login</a>
          </li>
          <li>
            <a href="/registro">Registro</a>
          </li>
          {{/if}}</ul>
      </div>
    </div>
  </div>
  <div class="section bg-primary text-left">
    <div class="container">
      <div class="row">
        <div class="col-md-9">
          <hr class="azul">
          <ul class="lead media-list text-left">
            <li class="media">
              <a class="pull-left" href="/"><img class="img-circle media-object" src="logolarge.jpg" height="120" width="120"></a>
              <div class="media-body">
                <h2 class="text-center">{{title}}</h2>
              </div>
            </li>
            <li class="media"></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-12">
    <hr class="blanco">
  </div>
  {{#if usuario}}
  <h3 class="text-center">Bienvenido {{usuario}}</h3>
  <div class="col-md-12">
    <hr class="blanco">
  </div>
  {{/if}}
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-3">
      </div>
      <div class="col-md-6">
        <a class="btn btn-lg btn-success btn-block" href="estadisticas">Estadísticas</a>
      </div>
      <div class="col-md-3">
      </div>
    </div>
  </div>
  {{#if usuario}}
  <div class="col-md-12">
    <hr class="blanco">
  </div>
  <div class="section">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <form action="agregarEdificio" role="form" method="post">
            <input type="hidden" name="usuario" value="enSesion">
            <button type="submit" class="btn btn-block btn-lg btn-primary">Agregar Edificio</button>
          </form>
        </div>
        <div class="col-md-3">
          <form action="agregarJefe" role="form" method="post">
            <input type="hidden" name="usuario" value="enSesion">
            <button type="submit" class="btn btn-block btn-lg btn-primary">Agregar Jefe Familia</button>
          </form>
        </div>
        <div class="col-md-3">
          <form action="listaJefes" role="form" method="post">
            <input type="hidden" name="usuario" value="enSesion">
            <button type="submit" class="btn btn-block btn-lg btn-primary">Listado</button>
          </form>
        </div>
        <div class="col-md-3">
          <form action="baseDatos.db" role="form" method="post">
            <input type="hidden" name="usuario" value="enSesion">
            <button type="submit" class="btn btn-block btn-md btn-primary">Descargar Base Datos (SQLite)</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  {{else}}
  <div class="col-md-12">
    <hr class="blanco">
  </div>
  <div class="section">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Identifíquese</h3>
            </div>
            <div class="panel-body">
              <div class="col-md-12">
                <div class="col-md-3">
                </div>
                <div class="col-md-2">
                  <a href="/registro" class="btn btn-primary" role="button">Registrarse</a>
                </div>
                <div class="col-md-2">
                </div>
                <div class="col-md-2">
                  <a href="/login" class="btn btn-primary" role="button">Iniciar Sesión</a>
                </div>
                <div class="col-md-3">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/if}}
  <div class="col-md-12">
    <hr class="blanco">
  </div>
</body>

</html>
